# DaDude Configuration
# Copia questo file in .env e configura i valori

# ===========================================
# DUDE SERVER CONNECTION
# ===========================================

# IP o hostname del Dude Server (RouterOS/CHR)
DUDE_HOST=192.168.1.1

# Porta API RouterOS (8728 plaintext, 8729 SSL)
DUDE_API_PORT=8728

# Usa SSL per la connessione API
DUDE_USE_SSL=false

# Credenziali RouterOS
DUDE_USERNAME=admin
DUDE_PASSWORD=your_password

# ===========================================
# DADUDE SERVER
# ===========================================

# Porta su cui esporre l'API DaDude
DADUDE_PORT=8000

# Host binding (0.0.0.0 per accesso esterno)
DADUDE_HOST=0.0.0.0

# Secret key per autenticazione API
DADUDE_API_KEY=your_secret_api_key_here

# ===========================================
# DATABASE
# ===========================================

# Path database SQLite locale per cache/storico
DATABASE_URL=sqlite+aiosqlite:///./data/dadude.db

# ===========================================
# POLLING & SYNC
# ===========================================

# Intervallo polling dispositivi (secondi)
POLL_INTERVAL=60

# Intervallo sync completo (secondi)
FULL_SYNC_INTERVAL=300

# Timeout connessione Dude (secondi)
CONNECTION_TIMEOUT=30

# ===========================================
# LOGGING
# ===========================================

# Livello log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# File di log
LOG_FILE=./logs/dadude.log

# ===========================================
# WEBHOOK (opzionale)
# ===========================================

# URL webhook per notifiche esterne
WEBHOOK_URL=
WEBHOOK_SECRET=

# ===========================================
# ENCRYPTION
# ===========================================

# Chiave master per cifratura credenziali (opzionale)
# Se non specificata, verr√† generata automaticamente
# e salvata in ./data/.encryption_key
# IMPORTANTE: Conserva questa chiave per poter decifrare i dati!
ENCRYPTION_KEY=
